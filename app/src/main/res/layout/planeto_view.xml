<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:gravity="center_vertical"
    android:padding="10dp">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/earth"
        android:elevation="30dp"
        android:id="@+id/planet_img"
        />

    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="-60dp"
        app:cardMaxElevation="20dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#B799FF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="70dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom"
                >

                <TextView
                    android:id="@+id/planet_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Planet Name"
                    android:textColor="#fff"
                    android:textSize="24dp"
                    android:layout_marginTop="5dp"/>

                
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    android:layout_marginEnd="10dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/planet_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Galaxy-name"
                android:fontFamily="sans-serif-black"
                android:textColor="#fff"
                android:textSize="14dp"
                android:layout_marginTop="-8dp"/>


            <View
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:background="#1976D2"
                android:layout_marginTop="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_distance"
                    />
                <TextView
                    android:id="@+id/planet_distance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Distance"
                    android:textColor="#fff"
                    android:layout_marginLeft="5dp"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_gravity"
                    />
                <TextView
                    android:id="@+id/planet_gravity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gravity"
                    android:textColor="#fff"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>